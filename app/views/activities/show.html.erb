<div class="container my-4">
    <%= link_to activities_path do %>
        <i class="ph-arrow-left-bold" id="icon-button"></i>
      <% end %>
  <div class="show d-flex align-items-center my-4">
    <h2>You should</h2>
    <h2> <%= @activity.title %> </h2>
  </div>
  <div>
    <%= link_to "Done", @activity, method: :delete, data: {confirm: "Are you sure? This will delete the task"}, class:'btn btn-outline-primary my-4' %>
  </div>
</div>
